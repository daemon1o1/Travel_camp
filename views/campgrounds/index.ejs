<%-include ('../partials/header')%>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Travel World</h1>
            <p>view our travel journey</p>
            <p>
            <a class="btn btn-primary btn large" href="/campgrounds/new">Add new</a>
            </p>
        </div>
   </header>
    <div class="row" style="display:flex; flex-wrap: wrap; text-align:center;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-4 col-sm-6">
                <div class="thumbnail">
                     <img src="<%=campground.image%>" class="img-thumbnail">
                        <div>
                            <h4><%=campground.name%></h4>
                        </div>
                </div>
                <p>
                    <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">more Info</a>
                </p>
            </div>
        <% }); %>
    </div>
</div>


<%-include ('../partials/footer')%>

